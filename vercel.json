{
  "version": 2,
  "buildCommand": "./scripts/vercel-build.sh",
  "outputDirectory": "frontend/out",
  "framework": null,
  "functions": {
    "api/**/*.py": {}
  },
  "rewrites": [
    {
      "source": "/api/auth/(.*)",
      "destination": "/api/auth.py"
    },
    {
      "source": "/api/portfolio/(.*)",
      "destination": "/api/portfolio.py"
    },
    {
      "source": "/strategies/(.*)",
      "destination": "/api/strategies.py"
    },
    {
      "source": "/api/market-data/(.*)",
      "destination": "/api/market-data.py"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index.py"
    },
    {
      "source": "/(.*)",
      "destination": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "USE_REAL_DATA": "true",
    "RATE_LIMIT_ENABLED": "true",
    "MAX_REQUESTS_PER_MINUTE": "60"
  },
  "github": {
    "silent": false
  }
}

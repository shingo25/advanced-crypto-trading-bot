{
  "version": 2,
  "buildCommand": "./scripts/vercel-build.sh",
  "outputDirectory": "frontend/out",
  "framework": null,
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "../frontend/out"
      }
    },
    {
      "src": "api/**/*.py",
      "use": "@vercel/python",
      "config": {
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/auth.py"
    },
    {
      "src": "/api/portfolio/(.*)",
      "dest": "/api/portfolio.py"
    },
    {
      "src": "/strategies/(.*)",
      "dest": "/api/strategies.py"
    },
    {
      "src": "/api/market-data/(.*)",
      "dest": "/api/market-data.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS, PATCH"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "X-Requested-With, Content-Type, Authorization"
        }
      ]
    }
  ],
  "env": {
    "ENVIRONMENT": "production",
    "USE_REAL_DATA": "true",
    "RATE_LIMIT_ENABLED": "true",
    "MAX_REQUESTS_PER_MINUTE": "60",
    "ENABLE_PRICE_STREAMING": "false"
  },
  "github": {
    "silent": false
  }
}

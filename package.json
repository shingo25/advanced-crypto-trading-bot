{
  "name": "advanced-crypto-trading-bot",
  "version": "1.0.0",
  "description": "Advanced cryptocurrency trading bot with AI-powered strategies and comprehensive monitoring",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "pytest tests/",
    "test:dev": "pytest tests/development/",
    "test:security": "bandit -r src/ -f json -o bandit-report.json",
    "lint:backend": "black src/ tests/ && flake8 src/ tests/",
    "format:backend": "black src/ tests/",
    "clean": "find . -type d -name '__pycache__' -exec rm -rf {} + && find . -name '*.pyc' -delete",
    "prepare": "if [ -z \"$CI\" ]; then husky; fi"
  },
  "dependencies": {
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.2.0",
    "@mui/lab": "^7.0.0-beta.14",
    "@mui/material": "^7.2.0",
    "@mui/material-nextjs": "^7.2.0",
    "@mui/system": "^7.2.0",
    "@supabase/supabase-js": "^2.45.4",
    "axios": "^1.10.0",
    "date-fns": "^4.1.0",
    "next": "^15.4.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^3.1.0",
    "zustand": "^5.0.6"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.17.9",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.4.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "lint-staged": "^16.1.2",
    "postcss": "^8.5.1",
    "prettier": "^3.6.2",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.4.0",
    "typescript": "^5.7.2",
    "husky": "^9.1.7"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,css}": [
      "prettier --write"
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/arata/advanced-crypto-trading-bot.git"
  },
  "keywords": [
    "crypto",
    "trading",
    "bot",
    "ai",
    "blockchain",
    "python",
    "fastapi",
    "nextjs",
    "react"
  ],
  "author": "arata",
  "license": "MIT"
}